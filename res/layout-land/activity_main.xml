<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.valven.devfest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.valven.devfest.component.MainButton
                android:id="@+id/sessions"
                style="@style/MainButtonLarge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:orientation="vertical"
                app:customFont="Ubuntu-R.ttf"
                app:src="@drawable/oturumlar"
                app:text="@string/sessions" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/splitter" />

            <com.valven.devfest.component.MainButton
                android:id="@+id/speakers"
                style="@style/MainButtonLarge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:orientation="vertical"
                app:customFont="Ubuntu-R.ttf"
                app:src="@drawable/konusmacilar"
                app:text="@string/speakers" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/splitter" />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.valven.devfest.component.MainButton
                    android:id="@+id/about"
                    style="@style/MainButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:customFont="Ubuntu-R.ttf"
                    app:src="@drawable/hakkinda"
                    app:text="@string/about" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/splitter" />

                <com.valven.devfest.component.MainButton
                    android:id="@+id/favourites"
                    style="@style/MainButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:customFont="Ubuntu-R.ttf"
                    app:src="@drawable/favoriler"
                    app:text="@string/favourites" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/splitter" />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.valven.devfest.component.MainButton
                    android:id="@+id/transportation"
                    style="@style/MainButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:customFont="Ubuntu-R.ttf"
                    app:src="@drawable/ulasim"
                    app:text="@string/transportation" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/splitter" />

                <com.valven.devfest.component.MainButton
                    android:id="@+id/sponsors"
                    style="@style/MainButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:customFont="Ubuntu-R.ttf"
                    app:src="@drawable/sponsorlar"
                    app:text="@string/sponsors" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/footer_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.valven.devfest.component.CustomButton
            android:id="@+id/button_ankara"
            style="@style/FooterButton"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="@string/ankara"
            app:customFont="Ubuntu-B.ttf" />

        <com.valven.devfest.component.CustomButton
            android:id="@+id/button_eskisehir"
            style="@style/FooterButton"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="@string/eskisehir"
            app:customFont="Ubuntu-B.ttf" />

        <com.valven.devfest.component.CustomButton
            android:id="@+id/button_istanbul"
            style="@style/FooterButton"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="@string/istanbul"
            app:customFont="Ubuntu-B.ttf" />
    </LinearLayout>

</LinearLayout>